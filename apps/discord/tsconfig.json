{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "lib": ["es2021"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",

    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["utils/*"]
    }
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["dist", "node_modules", "tests"]
}
